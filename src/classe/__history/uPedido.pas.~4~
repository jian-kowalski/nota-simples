unit uPedido;

interface

uses
  System.Generics.Collections, uItem;

type
  TPedido = class
  private
    FoListaDeItens: TList<TItem>;
    function GetItens: TList<TItem>;
    procedure SetItens(const Value: TList<TItem>);
  public
   property  Itens: TList<TItem> read GetItens write SetItens;
  end;

implementation

{ TPedido }

function TPedido.GetItens: TList<TItem>;
begin
  Result := FoListaDeItens;
end;

procedure TPedido.SetItens(const Value: TList<TItem>);
begin
  FoListaDeItens := Value;
end;

end.
